generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// An organization using Sarge to run technical hiring workflows. An organization owns positions, candidates, assessment templates, and members.
model Organization {
  id        String   @id @unique @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  slug      String?  @unique
  logo      String?

  positions           Position[]
  candidates          Candidate[]
  assessmentTemplates AssessmentTemplate[]
  taskTemplates       TaskTemplate[]
  members             Member[]
  invitations         Invitation[]
  tags                Tag[]
}

// An internal user of the Sarge platform (e.g. recruiter, reviewer, admin). Users authenticate and may belong to one or more organizations.
model User {
  id            String   @id @unique @default(cuid())
  name          String
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  reviews               Review[]
  comments              Comment[]
  sessions              Session[]
  accounts              Account[]
  verifications         Verification[]
  members               Member[]
  invitations           Invitation[]   @relation("Inviter")
  positions             Position[]     @relation("CreatedPositions")
  decidedApplications   Application[]  @relation("ApplicationDecision")
  authoredTaskTemplates TaskTemplate[] @relation("AuthoredTaskTemplates")
}

// A role or position that an organization is hiring for (e.g. "Software Engineer"). Positions collect applications from candidates.
model Position {
  id           String   @id @unique @default(cuid())
  title        String
  orgId        String
  archived     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdById  String
  assessmentId String?

  applications       Application[]
  organization       Organization        @relation(fields: [orgId], references: [id])
  creator            User                @relation("CreatedPositions", fields: [createdById], references: [id])
  tags               Tag[]               @relation("PositionTags")
  assessmentTemplate AssessmentTemplate? @relation("derivedFromPosition", fields: [assessmentId], references: [id])
}

// An external applicant who applies to positions within an organization. Candidates do not authenticate and may apply to multiple positions.
model Candidate {
  id    String @id @unique @default(cuid())
  name  String
  email String

  linkedinUrl    String?
  githubUrl      String?
  major          String?
  graduationDate String?
  resumeUrl      String?

  orgId     String
  createdAt DateTime @default(now())

  applications Application[] // list of positions the candidate has applied to
  organization Organization  @relation(fields: [orgId], references: [id])

  @@unique([email, orgId])
}

enum AssessmentStatus {
  NOT_ASSIGNED // Application created, no assessment assigned yet
  NOT_STARTED // Assessment created and link sent to candidate, but candidate has not started yet
  SUBMITTED // Candidate completed and submitted assessment
  EXPIRED // Assessment deadline passed without submission
  GRADED // Assessment graded by reviewer
}

enum DecisionStatus {
  PENDING // No decision made yet (default)
  ACCEPTED // Candidate passed and accepted for position (or next interview in Next's case)
  REJECTED // Candidate did not meet requirements
}

// Represents a candidate's application to a specific position. This is the core hiring entity, tracking assessment progress and hiring decisions.
model Application {
  id               String           @id @unique @default(cuid())
  candidateId      String
  positionId       String
  // Canonical assessment workflow state for the application. Other assessment fields (submittedAt, reviews, deadline) are derived indicators.
  assessmentStatus AssessmentStatus @default(NOT_ASSIGNED)
  decisionStatus   DecisionStatus   @default(PENDING)
  graderId         String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  decidedAt DateTime?

  candidate  Candidate   @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  position   Position    @relation(fields: [positionId], references: [id], onDelete: Cascade)
  assessment Assessment?
  grader     User?       @relation("ApplicationDecision", fields: [graderId], references: [id], onDelete: SetNull)

  @@unique([candidateId, positionId])
  @@index([positionId, assessmentStatus]) // For position stats queries
  @@index([positionId, decisionStatus]) // For filtering by decision
}

// Represents an assessment composed of tasks (questions) that could be assigned to a position.
model AssessmentTemplate {
  id          String @id @unique @default(cuid())
  title       String
  description String
  orgId       String

  organization Organization             @relation(fields: [orgId], references: [id])
  assessments  Assessment[]             @relation("derivedFromAssessmentTemplate")
  tasks        AssessmentTemplateTask[]
  positions    Position[]               @relation("derivedFromPosition")

  @@index([title])
}

// A task (question) that could be asked in an assessment. Contains test cases, description, and starter code.
model TaskTemplate {
  id                 String   @id @unique @default(cuid())
  title              String
  content            String   @db.Text
  publicTestCases    Json[]
  privateTestCases   Json[]
  orgId              String
  taskType           String?
  supportedLanguages String[] @default([])
  authorId           String

  organization Organization           @relation(fields: [orgId], references: [id])
  author       User                   @relation("AuthoredTaskTemplates", fields: [authorId], references: [id], onDelete: Restrict)
  tasks        Task[]                 @relation("derivedFromTaskTemplate")
  tags         Tag[]                  @relation("TaskTemplateTags")
  languages    TaskTemplateLanguage[]

  assessments AssessmentTemplateTask[]

  @@index([title])
}

model TaskTemplateLanguage {
  id             Int    @id @unique @default(autoincrement())
  taskTemplateId String
  solution       String
  stub           String

  language     ProgrammingLanguage
  taskTemplate TaskTemplate        @relation(fields: [taskTemplateId], references: [id])
}

enum ProgrammingLanguage {
  python
  javascript
  c
  typescript
  ruby
}

// Mapping table between task templates and assessment templates that includes the order in which task templates
// should be displayed to the candidate
model AssessmentTemplateTask {
  assessmentTemplateId String
  taskTemplateId       String
  order                Int

  assessmentTemplate AssessmentTemplate @relation(fields: [assessmentTemplateId], references: [id])
  taskTemplate       TaskTemplate       @relation(fields: [taskTemplateId], references: [id])

  @@id([assessmentTemplateId, taskTemplateId])
  @@unique([assessmentTemplateId, order])
  @@index([assessmentTemplateId, order])
}

// A task within an assessment, containing the candidate's submitted code.
model Task {
  id             String @id @unique @default(cuid())
  assessmentId   String
  taskTemplateId String
  candidateCode  String @db.Text

  updatedAt DateTime? @updatedAt

  assessment   Assessment   @relation("combineToFormAssessment", fields: [assessmentId], references: [id])
  taskTemplate TaskTemplate @relation("derivedFromTaskTemplate", fields: [taskTemplateId], references: [id])
  comments     Comment[]
}

// An assessment instance assigned to an application. Generated from an assessment template and composed of multiple tasks.
model Assessment {
  id                   String    @id @unique @default(cuid())
  applicationId        String    @unique
  assessmentTemplateId String
  assignedAt           DateTime  @default(now())
  submittedAt          DateTime?
  uniqueLink           String    @unique
  deadline             DateTime?

  application        Application        @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  assessmentTemplate AssessmentTemplate @relation("derivedFromAssessmentTemplate", fields: [assessmentTemplateId], references: [id])
  tasks              Task[]             @relation("combineToFormAssessment")
  reviews            Review[]
}

// A review of an assessment submitted by a user, including a rating and feedback.
model Review {
  id           String   @id @unique @default(cuid())
  assessmentId String
  reviewerId   String
  rating       Int
  content      String
  reviewedAt   DateTime @default(now())

  assessment Assessment @relation(fields: [assessmentId], references: [id])
  reviewer   User       @relation(fields: [reviewerId], references: [id])
}

// A comment left by a reviewer on a specific task within an assessment.
model Comment {
  id         String   @id @unique @default(cuid())
  taskId     String
  content    String   @db.Text
  reviewerId String
  reviewedAt DateTime @default(now())

  task     Task @relation(fields: [taskId], references: [id])
  reviewer User @relation(fields: [reviewerId], references: [id])
}

// An authenticated session for a user. Stores login state and the user's active organization context.
model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  activeOrganizationId String?

  @@index([userId])
  @@index([token])
}

// An authentication account linked to a user (email/password).
model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
}

// A verification token used for actions such as email verification or password resets.
model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userId     String?

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([identifier, value])
}

// Represents a user's membership within an organization and their assigned role.
model Member {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  // Role identifier for the member within the organization. Stored as a lowercase string (e.g. "owner", "admin") to match better-auth role keys.
  role           String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([userId, organizationId])
  @@index([userId])
  @@index([organizationId])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  REVOKED
}

// An invitation sent to an email address to join an organization with a specific role. Accepted invitations result in the creation of a Member record.
model Invitation {
  id             String           @id @default(cuid())
  organizationId String
  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  email          String
  // Role granted upon invitation acceptance. Stored as a lowercase string (e.g. "owner", "admin") to match better-auth role keys.
  role           String
  status         InvitationStatus @default(PENDING)
  expiresAt      DateTime
  acceptedAt     DateTime?
  createdAt      DateTime         @default(now())
  inviterId      String

  inviter User @relation("Inviter", fields: [inviterId], references: [id], onDelete: Cascade)

  @@unique([email, organizationId])
  @@index([email])
  @@index([organizationId])
}

// A label used to categorize and organize task templates within an organization.
model Tag {
  id           String   @id @unique @default(cuid())
  name         String
  orgId        String
  colorHexCode String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  // These are taggable items.
  taskTemplates TaskTemplate[] @relation("TaskTemplateTags")
  positions     Position[]     @relation("PositionTags")

  @@unique([name, orgId])
  @@index([orgId])
}
