generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// An Organization that is hiring technical positions (ie: NEU, MIT, Harvard).
// One instance of Sarge can host multiple organizations.
model Organization {
  id        String   @id @unique @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  slug      String?  @unique
  logo      String?

  positions           Position[]
  candidates          Candidate[]
  assessmentTemplates AssessmentTemplate[]
  taskTemplates       TaskTemplate[]
  members             Member[]
  invitations         Invitation[]
  tags                Tag[]
}

// A user of the Sarge platform (not a candidate)
model User {
  id            String   @id @unique @default(cuid())
  name          String
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  reviews             Review[]
  comments            Comment[]
  sessions            Session[]
  accounts            Account[]
  verifications       Verification[]
  members             Member[]
  invitations         Invitation[]   @relation("Inviter")
  positions           Position[]     @relation("CreatedPositions")
  decidedApplications Application[]  @relation("ApplicationDecision")
}

// A position that an organization is hiring for (ie: SWE)
model Position {
  id          String   @id @unique @default(cuid())
  title       String
  orgId       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdById String

  applications Application[] // list of candidates in the position
  organization Organization  @relation(fields: [orgId], references: [id])
  creator      User          @relation("CreatedPositions", fields: [createdById], references: [id])
}

// An external entity (not associated with a User) of the Sarge platform that is participating in a technical interview
model Candidate {
  id    String @id @unique @default(cuid())
  name  String
  email String

  linkedinUrl    String? // these are unlikely to change from application to application, so we can store them here
  githubUrl      String?
  major          String?
  graduationDate String? // May 2026 for example
  resumeUrl      String?

  orgId     String
  createdAt DateTime @default(now())

  applications Application[] // list of positions the candidate has applied to
  organization Organization  @relation(fields: [orgId], references: [id])

  @@unique([email, orgId])
}

enum AssessmentStatus {
  NOT_ASSIGNED // In pool, no assessment assigned yet
  ASSIGNED // Assessment created and link sent to candidate
  SUBMITTED // Candidate completed and submitted assessment
  EXPIRED // Assessment deadline passed without submission
  GRADED // Assessment graded by reviewer
}

enum DecisionStatus {
  PENDING // No decision made yet (default)
  ACCEPTED // Candidate passed and accepted for position (or next interview in Next's case)
  REJECTED // Candidate did not meet requirements
}

// Represents a candidate's application to a specific position. This is the core hiring entity, tracking assessment progress and decisions.
model Application {
  id               String           @id @unique @default(cuid())
  candidateId      String
  positionId       String
  // Canonical assessment workflow state for the application. Other assessment fields (submittedAt, reviews, deadline) are derived indicators.
  assessmentStatus AssessmentStatus @default(NOT_ASSIGNED)
  decisionStatus   DecisionStatus   @default(PENDING)
  decidedBy        String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  decidedAt DateTime?

  candidate     Candidate   @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  position      Position    @relation(fields: [positionId], references: [id], onDelete: Cascade)
  assessment    Assessment?
  // We store the assessment here bc in the position view we want to have an easy way to access the assessment
  decidedByUser User?       @relation("ApplicationDecision", fields: [decidedBy], references: [id], onDelete: SetNull)

  @@unique([candidateId, positionId])
  @@index([positionId, assessmentStatus]) // For position stats queries
  @@index([positionId, decisionStatus]) // For filtering by decision
}

